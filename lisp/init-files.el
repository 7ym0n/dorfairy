(defun dotfairy/sudo-this-file ()
  "Open the current file as root."
  (interactive)
  (find-file
   (sudo-file-path
    (or buffer-file-name
        (when (or (derived-mode-p 'dired-mode)
                  (derived-mode-p 'wdired-mode))
          default-directory)))))

